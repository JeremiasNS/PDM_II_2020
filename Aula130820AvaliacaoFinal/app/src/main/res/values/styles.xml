<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleTitulo">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">21dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksandsemibold</item>
    </style>
    <style name="styleSubTitulo">
        <item name="android:textSize">19dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksandsemibold</item>
    </style>
    <style name="styleTexto">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">@font/opensansregular</item>
    </style>
    <style name="styleRodape">
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>
