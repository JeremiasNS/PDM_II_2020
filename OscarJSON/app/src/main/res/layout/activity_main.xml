<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgmainactivity3"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/form"
        android:src="@drawable/letreiroprincipal"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/form"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TableRow>
            <TextView
                android:text="Nome: "
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
            <EditText
                android:width="150dp"
                android:id="@+id/etxt_nome"
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Direção: "
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/etxt_direcao"
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Categoria: "
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/etxt_categoria"
                android:textColor="#fff"
                android:fontFamily="@font/manropesemibold"
                android:textSize="17dp"/>
        </TableRow>


    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cadastrar"
        app:layout_constraintTop_toBottomOf="@id/form"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/enviar"
        android:text="Cadastrar"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enviar"
        app:layout_constraintTop_toBottomOf="@id/cadastrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Enviar"
        android:background="@drawable/button2"
        android:textColor="#FFFFFF"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"/>


</androidx.constraintlayout.widget.ConstraintLayout>