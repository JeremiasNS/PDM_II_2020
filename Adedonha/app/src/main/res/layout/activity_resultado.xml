<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_resultado"
        android:scaleType="centerCrop"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meuGrid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#A4FFFFFF"
        android:rowCount="4"
        android:columnCount="4">

            <TextView
                android:id="@+id/usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:textAlignment="center"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:layout_column="0"
                android:fontFamily="@font/regular"
                android:text="Usuário"
                android:textColor="#000"
                android:textSize="22dp"/>
            <TextView
                android:textSize="20dp"
                android:fontFamily="@font/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruta:"
                android:layout_column="0"
                android:layout_row="1"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/regular"
                android:layout_row="1"
                android:id="@+id/frutaUser"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_column="0"
                android:layout_row="2"
                android:text="País:"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="@font/regular"
                android:layout_row="2"
                android:id="@+id/paisUser"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:fontFamily="@font/regular"
                android:layout_row="3"
                android:text="Animal:"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:fontFamily="@font/regular"
                android:id="@+id/animalUser"
                android:textColor="#000"/>
            <TextView
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                android:fontFamily="@font/regular"
                android:layout_columnSpan="2"
                android:textAlignment="center"
                android:layout_gravity="fill_horizontal"
                android:layout_column="2"
                android:layout_row="0"
                android:textColor="#000"
                />
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fruta:"
                android:fontFamily="@font/regular"
                android:layout_column="2"
                android:layout_row="1"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_column="3"
                android:layout_row="1"
                android:fontFamily="@font/regular"
                android:id="@+id/frutaAndroid"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:text="País:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"
                android:textSize="18dp"
                android:fontFamily="@font/regular"
                android:id="@+id/paisAndroid"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                android:text="Animal:"
                android:fontFamily="@font/regular"
                android:textSize="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="3"
                android:textSize="18dp"
                android:fontFamily="@font/regular"
                android:id="@+id/animalAndroid"
                android:textColor="#000"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@id/meuGrid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/holiday"
            android:textSize="50dp"
            android:id="@+id/totalLabel"
            android:text="Total:"
            android:textColor="#FF5252"
            android:shadowRadius="3"
            android:shadowColor="#FFFFFF"
            android:shadowDx="-3"
            android:shadowDy="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:textColor="#FF5252"
            android:id="@+id/total"
            android:fontFamily="@font/holiday"
            android:textSize="50dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>